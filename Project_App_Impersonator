/* What does the app's SQL look like? */

CREATE TABLE instagram (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    username TEXT,
    followers INTEGER, 
    total_likes INTEGER);
    
INSERT INTO instagram (username, followers, total_likes) VALUES ("Angie Jolies", 400000, 1000000);
